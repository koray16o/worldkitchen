<h1>{{title}}</h1>
<hr />
<p>Written by: {{author.name}}</p>
<p>Summary: {{description}}</p>
<p>Rating: {{rating}}</p>
<a href='/books/{{id}}/edit'>Edit this book</a>
<form action='/books/delete/{{id}}' method='POST'>
  <button>Delete</button>
</form>

{{#if imageUrl}}
  <img src='{{imageUrl}}' />
{{/if}}
<hr />
<a href='/books'>Back</a>

<h2>Reviews</h2>

{{#each reviews}}

  <p><span> User: {{user}}</span> -- Comment: {{comment}}</p>

{{/each}}

<h2>Add a Review</h2>
<form action='/reviews/add/{{id}}' method='POST'>
  <label for=''>User:</label>
  <input type='text' name='user' />
  <label for=''>Comment</label>
  <textarea name='comment' cols='20' rows='2'></textarea>
  <button type='submit'>Add</button>
</form>