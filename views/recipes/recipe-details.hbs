<div class='recipe-details'>
  <h1>{{title}}</h1>
  <div class='image'>
    {{#if imageUrl}}

      {{#each imageUrl}}
        <div class='image'>
          <img src='{{this}}' width='100px' />
        </div>

      {{/each}}

    {{/if}}

  </div>

  <hr />
  <p>Country: {{country}}</p>

  <p>Ingredients:

    {{#each ingredients}}
      <ul>
        <li class='ingredient'>{{this}}</li>
      </ul>

    {{/each}}

  </p>

  <p>Difficulty: {{difficulty}}</p>
  <p>Preparation Time: {{preparationTime}}</p>
  <p>Serves: {{serves}}</p>
  <p>Cooking Instructions: {{description}}</p>
  <hr />
  <a href='/recipes/{{_id}}/edit'>Edit this Recipe</a>
  <form action='/recipes/delete/{{_id}}' method='POST'>
    <button>Delete</button>
  </form>

  <hr />
  <a href='/regions/{{region.name}}'>Back</a>

  <h2>Comments</h2>

  {{#each comment}}

    <p><span> User: {{user}}</span> -- Comment: {{comment}}</p>

  {{/each}}

  <h2>Add a Review</h2>
  <form action='/comments/add/{{id}}' method='POST'>
    <label for=''>User:</label>
    <input type='text' name='user' />
    <label for=''>Comment</label>
    <textarea name='comment' cols='20' rows='2'></textarea>
    <button type='submit'>Add</button>
  </form>
</div>